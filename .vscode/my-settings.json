{
  // personalizacion del editor con CSS y JS
  "vscode_custom_css.imports": [
    "file:///home/amaster/My-settings/Vscode-personalization/custom-vscode.css",
    "file:///home/amaster/My-settings/Vscode-personalization/custom-vscode.js",
    "file:///home/amaster/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js"
  ],
  "workbench.colorTheme": "amaster theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "material-icon-theme",
  
  // configuracion basica del editor
  "editor.formatOnSave": false,
  "editor.mouseWheelZoom": true,
  "editor.minimap.enabled": false,
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "editor.matchBrackets": "never",
  "editor.cursorBlinking": "expand",
  "editor.linkedEditing": true,
  "terminal.integrated.cursorStyle": "line",

  "workbench.statusBar.visible": false,
  "workbench.sideBar.location": "right",
  "workbench.activityBar.location": "hidden",
  "workbench.layoutControl.enabled": false,
  "workbench.editor.showTabs": "single",
  "workbench.startupEditor": "none",

  // eliminamos los breadcrums  y los botones de accion
  // tambien seteamos en  view->appearence->Tab Bar:hidden
  "window.titleBarStyle": "native",
  "window.commandCenter": false,
  "window.menuBarVisibility": "toggle",
  //"workbench.editor.editorActionsLocation": "hidden",

  //quitamos la scrollbar
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,

  //configuramos la tipografia y los estilos de linea
  "editor.fontFamily": "'Fira Code', 'JetBrains Mono', 'Hack Nerd Font','Droid Sans Mono', 'monospace', monospace",
  "editor.fontWeight": "normal",
  "editor.fontSize": 11, // el fontSize depende tanto de la pantalla como del sitema operativo
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.fontFamily": "'Fira Code', 'JetBrains Mono','Hack Nerd Font','monospace'",
  "editor.lineHeight": 1.7,
  "editor.tabSize": 4,
  "editor.fontLigatures": true,

  "editor.guides.bracketPairs": true,
  "editor.unicodeHighlight.invisibleCharacters": false,

  // =========================================================================================
  //configuracion por tipo de archivo y lenguaje -- formateo
  // =========================================================================================

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "clang-format.style": "{ColumnLimit: 200, BasedOnStyle: LLVM, IndentWidth: 4, AlignAfterOpenBracket: true}", // estilos para lenguaje C/C++

  "cmake.showOptionsMovedNotification": false,
  "cmake.configureOnOpen": true,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "redhat.telemetry.enabled": true,
  "git.openRepositoryInParentFolders": "never",

  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "editor.tabSize": 2 // para los json empleamos dos espacios
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "[c]": {
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true,
    "editor.wrappingIndent": "same",
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true,
    "editor.wrappingIndent": "same",
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[javascript]": {
    "editor.tabSize": 4
  },


  // extension 'Better Comments' config
  "better-comments.tags": [
    {
      "tag": "PROBLEM",
      "color": "#c22000",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "NOTE",
      "color": "#eb73d1",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "WARNING",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "TO-DO",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "DOCSTRING",
      "color": "#00bfe5",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "workbench.editorAssociations": {
    "*.pdf": "pdf.preview"
  },
  "diffEditor.hideUnchangedRegions.enabled": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "java.jdt.ls.java.home": "/usr/lib/jvm/jdk-21.0.4+7",
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "chat.commandCenter.enabled": false
}
