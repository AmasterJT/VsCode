{
  // personalizacion del editor con CSS y JS
  "vscode_custom_css.imports": [
    "file:///D:/Documentos/My-Settings/VsCode/custom-vscode.css",
    "file:///D:/Documentos/My-Settings/VsCode/custom-vscode.js"
  ],

  //temas e iconos
  "workbench.colorTheme": "Min Dark",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.iconTheme": "material-icon-theme",

  // configuracion basica del editor
  "editor.mouseWheelZoom": true,
  "editor.minimap.enabled": false,
  "workbench.sideBar.location": "right",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 120,
  "editor.formatOnSave": true,
  "editor.matchBrackets": "never",
  "terminal.integrated.cursorStyle": "line",
  "workbench.statusBar.visible": false,
  "workbench.activityBar.location": "hidden",
  "editor.cursorBlinking": "expand",

  // eliminamos los breadcrums  y los botones de accion
  // tambien seteamos en  view->appearence->Tab Bar:hidden
  "window.titleBarStyle": "native",
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "window.menuBarVisibility": "toggle",
  "workbench.editor.showTabs": "single",
  "breadcrumbs.enabled": false,
  //"workbench.editor.editorActionsLocation": "hidden",

  //quitamos la scrollbar
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.overviewRulerBorder": false,
  "editor.hideCursorInOverviewRuler": true,

  //configuramos la tipografia y los estilos de linea
  "editor.fontFamily": "'Fira Code', 'JetBrains Mono', 'Hack Nerd Font','Droid Sans Mono', 'monospace', monospace",
  "editor.fontWeight": "normal",
  "editor.fontSize": 11, // el fontSize depende tanto de la pantalla como del sitema operativo
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.fontFamily": "'Fira Code', 'JetBrains Mono','Hack Nerd Font','monospace'",
  "editor.lineHeight": 1.7,
  "editor.tabSize": 4,
  "editor.fontLigatures": true,

  // =========================================================================================
  //configuracion por tipo de archivo y lenguaje -- formateo
  // =========================================================================================
  "editor.linkedEditing": true,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "clang-format.style": "{ColumnLimit: 200, BasedOnStyle: LLVM, IndentWidth: 4}", // estilos para lenguaje C/C++

  "cmake.showOptionsMovedNotification": false,
  "cmake.configureOnOpen": true,
  "jupyter.interactiveWindow.creationMode": "perFile",
  "redhat.telemetry.enabled": true,
  "git.openRepositoryInParentFolders": "never",

  "[json]": {
    "editor.quickSuggestions": {
      "strings": true
    },
    "editor.suggest.insertMode": "replace",
    "editor.tabSize": 2 // para los json empleamos dos espacios
  },
  "[xml]": {
    "editor.defaultFormatter": "DotJoshJohnson.xml"
  },
  "[python]": {
    "editor.defaultFormatter": "ms-python.autopep8"
  },
  "[c]": {
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true,
    "editor.wrappingIndent": "same",
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[cpp]": {
    "editor.wordBasedSuggestions": "off",
    "editor.suggest.insertMode": "replace",
    "editor.semanticHighlighting.enabled": true,
    "editor.wrappingIndent": "same",
    "editor.defaultFormatter": "xaver.clang-format"
  },
  "[javascript]": {
    "editor.tabSize": 4
  },

  // extension 'Better Comments' config
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#c22000",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ]
}
